# Docs: https://caddyserver.com/docs/caddyfile
{$APP_URL} {
    root /var/www/public
    fastcgi / php-fpm:9000 php {
        index index.php
    }

    rewrite {
        to {path} {path}/ /index.php?{query}
    }
    gzip
    browse

    log stdout
    log /var/www/storage/logs/caddy_access.log

    errors stderr
    errors /var/www/storage/logs/caddy_error.log
}

www.{$APP_URL} {
    redir https://{$APP_URL}{uri}
}
